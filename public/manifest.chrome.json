{
  "name": "HoYoDaily: Automatic HoYoLab Check-In",
  "description": "Automatic Daily Check-in for HoYoverse Games.",
  "version": "1.1.1",
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["alarms", "storage", "notifications"],
  "host_permissions": ["https://hoyolab.com/*", "https://*.hoyolab.com/*"]
}
