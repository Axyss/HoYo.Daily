{
  "name": "HoYoDaily: Automatic HoYoLab Check-In",
  "description": "Automatic Daily Check-in for HoYoverse Games.",
  "version": "1.1.2",
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "permissions": ["alarms", "storage", "notifications", "idle"],
  "host_permissions": ["https://hoyolab.com/*", "https://*.hoyolab.com/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "hoyodaily@axyss.dev"
    }
  }
}
